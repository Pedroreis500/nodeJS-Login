<%- include('../partials/head.ejs') %>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center text-dark mgtop50"> @Pedro Reis 2023</h2>
        <div class="card shadow mgtop50">
          <div class="card-header bg-light text-light">
            <h4 class="text-center font-cinza"><i class="fas fa-user font-cinza"></i> Register</h4>
          </div>
          <div class="card-body">
            <form action="/register/register" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group">
                <label for="username" class="text-secondary font-weight-bold">Email</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fas fa-user"></i> <!-- Ícone de usuário -->
                    </div>
                  </div>
                  <input type="email" class="form-control" id="username" name="email" placeholder="Email@dominio.com">
                </div>
              </div>
              <div class="form-group">
                <label for="password" class="text-secondary font-weight-bold">Senha</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fas fa-lock"></i> <!-- Ícone de cadeado -->
                    </div>
                  </div>
                  <input type="password" class="form-control" name="password" placeholder="Senha">
                </div>
              </div>
              <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
                  <ul>
                    <% errors.forEach((error) => { %>
                      <li><%= error %></li>
                    <% }); %>
                  </ul>
                </div>
              <% } else if (typeof success !== 'undefined' && success.length > 0) { %>
                <div class="alert alert-success fade show mt-4" role="alert">
                  <ul>
                    <% success.forEach((succes) => { %>
                      <li><%= succes %></li>
                    <% }); %>
                  </ul>
                </div>
              <% } %>
          <!-- Link de âncora fora do botão -->
              <button type="submit" class="btn btn-block btn-custom ">Criar conta</button>
              <div class="text-center mt-3">
                <a href="/login" class="text-secondary mr-2">Já poussi uma conta?</a>
                <a href="#" class="text-secondary ml-2">Esqueceu a senha?</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer.ejs') %>